{
  "name": "dont-crack",
  "description": "semantic-release plugin checking if the new semantic release is breaking dependent projects",
  "version": "0.0.0-development",
  "author": "Gleb Bahmutov <gleb.bahmutov@gmail.com>",
  "bugs": "https://github.com/bahmutov/dont-crack/issues",
  "config": {
    "pre-git": {
      "commit-msg": "simple",
      "pre-commit": [
        "npm prune",
        "npm run deps",
        "npm test",
        "npm run ban"
      ],
      "pre-push": [
        "npm run secure",
        "npm run license",
        "npm run ban -- --all",
        "npm run size"
      ],
      "post-commit": [],
      "post-merge": []
    }
  },
  "engines": {
    "node": ">=6"
  },
  "files": [
    "src/*.js",
    "!src/*-spec.js"
  ],
  "homepage": "https://github.com/bahmutov/dont-crack#readme",
  "keywords": [
    "dont-break",
    "plugin",
    "release",
    "semantic",
    "semantic-release",
    "semver",
    "verify"
  ],
  "license": "MIT",
  "main": "src/",
  "noScopeName": "dont-crack",
  "publishConfig": {
    "registry": "http://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bahmutov/dont-crack.git"
  },
  "scripts": {
    "ban": "ban",
    "deps": "deps-ok && dependency-check .",
    "issues": "git-issues",
    "license": "license-checker --production --onlyunknown --csv",
    "lint": "standard --verbose --fix src/*.js",
    "pretest": "npm run lint",
    "secure": "nsp check",
    "size": "t=\"$(npm pack .)\"; wc -c \"${t}\"; tar tvf \"${t}\"; rm \"${t}\";",
    "test": "npm run unit",
    "unit": "mocha src/*-spec.js",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "dependencies": {
    "always-error": "^1.0.0",
    "check-more-types": "^2.23.0",
    "debug": "^2.4.5",
    "dont-break": "^1.3.0",
    "lazy-ass": "^1.5.0"
  },
  "devDependencies": {
    "ban-sensitive-files": "1.8.4",
    "dependency-check": "2.6.0",
    "deps-ok": "1.2.0",
    "git-issues": "1.3.1",
    "license-checker": "8.0.3",
    "mocha": "3.2.0",
    "nsp": "2.6.2",
    "pre-git": "3.12.0",
    "standard": "8.6.0",
    "semantic-release": "^6.3.2"
  }
}
